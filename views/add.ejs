<% include layout/head %> 
    <header>
        <h1>ÔºÅ</h1>
    </header>
    <div class="content">
        <ul id="J_list">
            
        </ul>
    </div>
<script>
$(function(){
    $.ajax({
        url: "v1/home"
    }).done(function(data) {
        var _list = $('#J_list');
        var _tpl =[];
        if(data.code===200&&data.data.length>0){
            data.data.forEach(function(v,i){
                _tpl.push([
                    '<li>',
                    '<a href="articles/'+v._id+'">',
                    '<h3>'+v.title+'</h3>',
                    '<p>'+v.info+'</p>',
                    '</a>',
                    '</li>'
                ].join(''))
            })
            _list.html(_tpl)
        }
    });
})
</script>
